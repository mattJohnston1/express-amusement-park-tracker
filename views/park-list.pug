extends layout.pug

block content
  a(href="/park/add") Add Park
  table
    thead
      tr
        th(scope="column") Park Name
        th(scope="column") Location
        th(scope="column") Opened
    tbody
      each park in parks
        tr
          td= park.parkName
          td #{park.city}, #{park.provinceState}, #{park.country}
          td= park.opened
          td
            a(href=`/park/${park.id}` role='button' class="btn btn-success")  Details
          
        
